{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "src/node_modules/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ]
}